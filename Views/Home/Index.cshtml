@model List<Product>
@{
    ViewData["Title"] = "Catalogo";
}


<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900 items-center">Customers also purchased</h2>

        <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            @foreach (var product in Model)
            {
                <div class="flex flex-col rounded-lg">
                    <div class="mt-4 flex flex-col">
                        <div >

                            <h3 class="text-sm text-gray-700 font-bold">
                                <a>
                                    <span aria-hidden="true"></span>
                                    @product.Name <!-- Usar el nombre del producto desde el modelo -->
                                </a>
                            </h3>
                            <p class="mt-1 pb-12 text-sm text-gray-500">@product.Description</p>
                        </div>
                        
                        <div class="w-full rounded-lg mt-10  lg:h-80">
                            <img src="@product.ImageUrl" alt="Front of men's Basic Tee in black." class="h-full w-full object-cover object-center lg:h-full lg:w-full">
                        </div>
                        <div class="flex justify-between mt-2">
                            <div class="flex">
                                <button id="addToCartButton_@product.ProductId"  class="bg-indigo-600 text-white px-2 py-1 m-2 rounded-md hover:bg-indigo-700">
                                    Agregar
                                </button>
                                <a asp-controller="Products" asp-action="edit" asp-route-id="@product.ProductId"  class="bg-indigo-600 text-white px-2 py-1 m-2 rounded-md hover:bg-indigo-700">
                                    Editar
                                </a>
                            </div>
                            <p class="text-sm font-medium text-gray-900">$@product.Price</p>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

