@model RegisterVM
@{
    ViewData["Title"] = "Register";
}



<div class="min-h-screen w-full bg-[#d1e7dd] text-foreground flex justify-center items-center py-12 md:py-24">
    <div class="bg-green-50 rounded-lg shadow-sm p-6 w-full max-w-md">
        <div class="flex items-center gap-2 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="24"
                 height="24"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round"
                 class="w-6 h-6">
                <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"
                      fill="green"></path>
                <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"></path>
            </svg>
            <h2 class="text-2xl font-semibold mb-0 leading-tight">Registrarse</h2>
        </div>

        <form asp-action="Register" class="space-y-6" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="grid gap-2">
                <label asp-for="Name" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                       for="name">
                    Nombre
                </label>
                <input asp-for="Name" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:border-green-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-600 disabled:cursor-not-allowed disabled:opacity-50"
                       id="name"
                       placeholder="Ingresa tu nombre"
                       type="text" />
            </div>
            <div class="grid gap-2">
                <label asp-for="Email" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                       for="email">
                    Correo electrónico
                </label>
                <input asp-for="Email" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:border-green-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-600 disabled:cursor-not-allowed disabled:opacity-50"
                       id="email"
                       placeholder="Ingresa tu correo"
                       type="email" />
            </div>
            <div class="grid gap-2">
                <label asp-for="Password" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                       for="password">
                    Contraseña
                </label>
                <input asp-for="Password" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:border-green-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-600 disabled:cursor-not-allowed disabled:opacity-50"
                       id="password"
                       placeholder="Ingresa tu contraseña"
                       type="password" />
            </div>
            <div class="grid gap-2">
                <label asp-for="ConfirmPassword" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                       for="confirmPassword">
                    Confirmar contraseña
                </label>
                <input asp-for="ConfirmPassword" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:border-green-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-600 disabled:cursor-not-allowed disabled:opacity-50"
                       id="confirmPassword"
                       placeholder="Confirma tu contraseña"
                       type="password" />
            </div>
            <div class="grid gap-2">
                <label asp-for="PhoneNumber" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                       for="phone">
                    Teléfono
                </label>
                <input asp-for="PhoneNumber" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:border-green-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-600 disabled:cursor-not-allowed disabled:opacity-50"
                       id="phone"
                       placeholder="Ingresa tu número de teléfono"
                       type="tel" />
            </div>
            <div class="grid gap-2">
                <label asp-for="Address" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                       for="address">
                    Dirección
                </label>
                <textarea asp-for="Address" class="flex min-h-[80px] w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:border-green-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-600 disabled:cursor-not-allowed disabled:opacity-50"
                          id="address"
                          rows="3"
                          placeholder="Ingresa tu dirección"></textarea>
            </div>
            <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-green-600 text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 w-full"
                    type="submit">
                Registrarse
            </button>
        </form>

    </div>
</div>