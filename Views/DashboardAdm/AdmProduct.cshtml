@model List<dynamic>
@{
    ViewData["Title"] = "AdmProductos";
}
<div class="mt-8 flex justify-center">
    <div class="bg-green-50 rounded-lg w-1/2 overflow-hidden shadow-sm">
        <h2 class="text-2xl font-semibold mb-4 text-center">Productos</h2>
        <div class="relative overflow-auto">
            <table class="w-full caption-bottom text-sm">
                <thead class="[&amp;_tr]:border-b">
                    <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
                            Nombre del producto
                        </th>
                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
                            Cantidad
                        </th>
                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
                            Dia de entrega
                        </th>
                    </tr>
                </thead>
                <tbody class="[&amp;_tr:last-child]:border-0">
                    @foreach (var item in Model)
                    {              
                            <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0 font-medium">@item.ProductName</td>
                            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0">@item.TotalQuantity</td>
                            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0">@item.Shipping</td>
                            </tr>
                        
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
