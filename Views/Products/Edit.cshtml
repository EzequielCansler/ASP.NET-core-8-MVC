@model Product

@{
    ViewData["Title"] = "Editar Producto";
    List<Category> categories = (List<Category>)ViewData["Categories"];
}

<div class="min-h-screen w-full bg-[#d1e7dd] text-foreground flex justify-center items-center py-12 md:py-24">
    <div class="bg-green-50 rounded-lg shadow-sm p-6 w-full max-w-md">
        <div class="flex items-center gap-2 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="24"
                 height="24"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round"
                 class="w-6 h-6 fill-primary">
                <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"
                      fill="green"></path>
                <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"></path>
            </svg>
            <h2 class="text-2xl font-semibold">Editar Producto</h2>
        </div>
        <form method="post" asp-controller="Products" asp-action="Edit" class="space-y-4">
            <input type="hidden" asp-for="ProductId" />
            <div class="grid gap-2">
          
                <div class="grid gap-2">
                    <label asp-for="Name" class="text-sm font-medium leading-none" for="name">
                        Nombre
                    </label>
                    <input type="text" asp-for="Name" class="flex h-10 w-full rounded-md border border-green-600 bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                           id="name"
                           placeholder="Ingresa el nombre del producto" />
                </div>
             
                <div class="grid gap-2">
                    <label asp-for="CategoryId" class="text-sm font-medium leading-none" for="category">
                        Categoría
                    </label>
                    <select asp-for="CategoryId" class="flex h-10 w-full rounded-md border border-green-600 bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50">
                        <option value="" disabled>Selecciona una categoría</option>
                        @foreach (Category category in categories)
                        {
                            <option value="@category.CategoryId" class="text-black">@category.CategoryName</option>
                        }
                    </select>
                </div>
               
                <div class="grid gap-2">
                    <label asp-for="ImageUrl" class="text-sm font-medium leading-none" for="image">
                        URL de la imagen
                    </label>
                    <input type="text" asp-for="ImageUrl" class="flex h-10 w-full rounded-md border border-green-600 bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                           id="image"
                           placeholder="Ingresa la URL de la imagen"
                           type="text" />
                </div>
              
                <div class="grid gap-2">
                    <label asp-for="Detail" class="text-sm font-medium leading-none" for="description">
                        Descripción
                    </label>
                    <textarea asp-for="Detail" class="flex min-h-[80px] w-full rounded-md border border-green-600 bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                              id="description"
                              placeholder="Ingresa la descripción del producto"></textarea>
                </div>
                <!-- Precio -->
                <div class="grid gap-2">
                    <label asp-for="Price" class="text-sm font-medium leading-none" for="price">
                        Precio
                    </label>
                    <input asp-for="Price" class="flex h-10 w-full rounded-md border border-green-600 bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                           id="price"
                           placeholder="Ingresa el precio del producto"
                           type="number" />
                </div>
            </div>
            <div class="flex justify-center gap-2 mt-4">
          
                <a asp-controller="Home" asp-action="Index" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-green-600 text-primary-foreground hover:bg-green-700 h-10 px-4 py-2">
                    Salir
                </a>
               
                <button asp-controller="Products" asp-action="Delete" asp-route-id="@Model.ProductId" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-green-600 text-primary-foreground hover:bg-green-700 h-10 px-4 py-2">
                    Borrar
                </button>

                <button type="submit" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-600 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-green-600 text-primary-foreground hover:bg-green-700 h-10 px-4 py-2">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
