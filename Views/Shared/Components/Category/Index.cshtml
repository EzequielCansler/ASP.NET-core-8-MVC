@model List<Category>

<div class="sm:col-span-3">
    <div class="mt-2">
        <select  type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
            @foreach (Category category in Model)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>
</div>